{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "no-underscore-dangle": "off",
      "react/jsx-filename-extension": "off",
      "no-return-await": "off",
      "max-len" :"off",
      "no-await-in-loop": "off",
      "react/prop-types":"off",
      "no-nested-ternary": "off",
      "jsx-a11y/label-has-associated-control": "off"
    },
    "settings": {
      "import/core-modules": ["electron", "react", "react-dom", "webpack", "html-webpack-plugin", "babili-webpack-plugin", "extract-text-webpack-plugin"]
    }
}
